%h1.center.add-top-margin= "Welcome to #{@user.username}'s page"
.row.add-top-space
  %ul.listing
  .row.center
    .col-md-4.col-md-offset-4
      %li=link_to gravatar_for(@user),user_path(@user)
      %li.article-title
        =link_to @user.username, user_path(@user)
      %li=pluralize(@user.articles.count, "article") if @user.articles
  =render 'articles/article',obj: @user.articles